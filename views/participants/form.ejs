<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <link rel="stylesheet" href="/css/main.css">
</head>
<body>

  <%- include('../partials/_nav') %>
  <%- include('../partials/_flash') %>

  <div class="page-wrap">
    <div class="page">
      <h1><%= title %></h1>

      <form action="<%= participant && participant.id
                       ? '/participants/' + participant.id
                       : '/participants' %>"
            method="POST">

        <input type="hidden" name="_csrf" value="<%= csrfToken %>">

        <div class="form-row">
          <label>Email</label>
          <input
            type="email"
            name="participantemail"
            value="<%= participant.participantemail || '' %>"
            required
          >
        </div>

        <div class="form-row">
          <label>First Name</label>
          <input
            type="text"
            name="participantfirstname"
            value="<%= participant.participantfirstname || '' %>"
            required
          >
        </div>

        <div class="form-row">
          <label>Last Name</label>
          <input
            type="text"
            name="participantlastname"
            value="<%= participant.participantlastname || '' %>"
            required
          >
        </div>

        <div class="form-row">
          <label>Date of Birth</label>
          <input
            type="date"
            name="participantdob"
            value="<%= participant.participantdob ? String(participant.participantdob).slice(0,10) : '' %>"
          >
        </div>

        <div class="form-row">
          <label>Role</label>
          <input
            type="text"
            name="participantrole"
            value="<%= participant.participantrole || '' %>"
          >
        </div>

        <div class="form-row">
          <label>Phone</label>
          <input
            type="text"
            name="participantphone"
            value="<%= participant.participantphone || '' %>"
          >
        </div>

        <div class="form-row">
          <label>School or Employer</label>
          <input
            type="text"
            name="participantschooloremployer"
            value="<%= participant.participantschooloremployer || '' %>"
          >
        </div>

        <div class="form-row">
          <label>Field of Interest</label>
          <input
            type="text"
            name="participantfieldofinterest"
            value="<%= participant.participantfieldofinterest || '' %>"
          >
        </div>

        <div class="form-row">
          <label>Zip Code</label>
          <input
            type="text"
            name="participantzip"
            value="<%= participant.participantzip || '' %>"
          >
        </div>

        <% if (participant && participant.id) { %>
          <button type="submit" class="btn-primary">Update Participant</button>
        <% } else { %>
          <button type="submit" class="btn-primary">Create Participant</button>
        <% } %>
      </form>

      <p>
        <a href="/participants" class="link-back">Back to list</a>
      </p>
    </div>
  </div>

</body>
</html>





