<!DOCTYPE html>
<html>
<head>
  <title>Events</title>
  <link rel="stylesheet" href="/css/main.css">
</head>
<body>

  <%- include('../partials/_nav') %>
  <%- include('../partials/_flash') %>

  <div class="page-wrap">
    <div class="page">

      <h1>Events</h1>

      <% if (currentUser.role === 'manager') { %>
        <p>
          <a href="/events/new" class="btn-add">+ Add Event</a>
        </p>
      <% } %>

      <table>
        <thead>
          <tr>
            <th>Name</th>
            <th>Type</th>
            <th>Recurrence</th>
            <th>Default Capacity</th>
            <th>Description</th>
            <% if (currentUser.role === 'manager') { %>
              <th>Actions</th>
            <% } %>
          </tr>
        </thead>

        <tbody>
          <% events.forEach(evt => { %>
            <tr>
              <td><%= evt.eventname %></td>
              <td><%= evt.eventtype || '' %></td>
              <td><%= evt.eventrecurrencepattern || '' %></td>
              <td><%= evt.eventdefaultcapacity || '' %></td>
              <td><%= evt.eventdescription || '' %></td>

              <% if (currentUser.role === 'manager') { %>
                <td class="actions">
                  <a href="/events/<%= evt.eventname %>/edit" class="btn-edit">
                    Edit
                  </a>

                  <form
                    action="/events/<%= evt.eventname %>/delete"
                    method="POST"
                    class="inline-form">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <button type="submit" class="btn-delete">
                      Delete
                    </button>
                  </form>
                </td>
              <% } %>
            </tr>
          <% }) %>
        </tbody>
      </table>

    </div>
  </div>

</body>
</html>



