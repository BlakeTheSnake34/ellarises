<nav class="er-nav">

  <!-- LEFT: brand -->
  <div class="nav-left">
    <a href="/" class="nav-logo">
      <img src="/images/ella-logo.png" class="nav-logo-img" alt="Ella Rises Logo">
      Ella Rises
    </a>
  </div>

  <!-- MIDDLE: navigation links -->
  <div class="nav-middle">
    <% if (currentUser) { %>

      <!-- SHARED LINKS -->
      <a href="/home">Home</a>

      <!-- USERS (Non-managers) -->
      <% if (currentUser.role !== 'manager') { %>
        <a href="/registrations">Events</a>
        <a href="/my-donations">My Donations</a>
        <a href="/surveys/new">Take Survey</a>
      <% } %>

      <!-- MANAGERS -->
      <% if (currentUser.role === 'manager') { %>
        <a href="/events">Events</a>
        <a href="/participants">Participants</a>
        <a href="/donations">Donations</a>

        <span class="nav-divider"></span>

        <a href="/dashboard">Dashboard</a>
        <a href="/surveys">Survey Results</a>

        <!-- FIXED: Proper manager link to registrations -->
        <a href="/registrations/manage">Registrations</a>


        <!-- Added -->
        <a href="/milestones">Milestones</a>

        <a href="/admin/make-manager">Manager Access</a>
      <% } %>

    <% } %>
  </div>

  <!-- RIGHT: auth actions -->
  <div class="nav-right">
    <% if (currentUser) { %>
      <form action="/logout" method="POST" style="display:inline;">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        <button type="submit" class="button-link">Logout</button>
      </form>
    <% } else { %>
      <a href="/login" class="button-link">Login</a>
      <a href="/signup" class="button-link button-secondary">Sign Up</a>
    <% } %>
  </div>

</nav>
