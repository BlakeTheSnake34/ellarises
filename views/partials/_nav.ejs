<nav>
  <a href="/">Home</a>

  <% if (currentUser) { %>
    <a href="/dashboard">Dashboard</a>
    <a href="/events">Events</a>

    <!-- Link all logged-in users to the survey form -->
    <a href="/surveys/new">Take Survey</a>

    <!-- Manager-only admin links -->
    <% if (currentUser.role === 'manager') { %>
      <a href="/participants">Participants</a>
      <a href="/surveys">Survey Results</a>
      <a href="/admin/registrations">Registrations (Admin)</a>
    <% } %>

    <form action="/logout" method="POST" style="display:inline;">
      <input type="hidden" name="_csrf" value="<%= csrfToken %>">
      <button type="submit">Logout (<%= currentUser.role %>)</button>
    </form>
  <% } else { %>
    <a href="/login">Login</a>
  <% } %>
</nav>

<hr>




