<nav class="er-nav">
  <div class="nav-left">

    <!-- Logo + Brand -->
    <a href="/" class="nav-logo">
      <img src="/images/ella-logo.png" class="nav-logo-img" alt="Ella Rises Logo">
      Ella Rises
    </a>

    <% if (currentUser) { %>

      <!-- Shared pages -->
      <a href="/dashboard">Dashboard</a>
      <a href="/events">Events</a>
      <a href="/my-donations">My Donations</a>

      <!-- USER ONLY: Take Survey -->
      <% if (currentUser.role !== 'manager') { %>
        <a href="/surveys/new">Take Survey</a>
      <% } %>

      <!-- MANAGER ONLY LINKS -->
      <% if (currentUser.role === 'manager') { %>
        <!-- MANAGER-ONLY NAV ITEMS -->
        <a href="/dashboard">Dashboard</a>
        <a href="/participants">Participants</a>
        <a href="/surveys">Survey Results</a>
        <a href="/admin/registrations">Registrations</a>
        <a href="/donations">Donations</a>
        <a href="/admin/make-manager">Manager Access</a>
      <% } %>

    <% } %>

  </div>

  <div class="nav-right">
    <% if (currentUser) { %>
      <form action="/logout" method="POST" style="display:inline;">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        <button type="submit" class="button-link">Logout</button>
      </form>
    <% } else { %>
      <a href="/login" class="button-link">Login</a>
      <a href="/signup" class="button-link button-secondary">Sign Up</a>
    <% } %>
  </div>
</nav>
