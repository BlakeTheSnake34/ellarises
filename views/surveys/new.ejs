<!DOCTYPE html>
<html>
<head>
  <title>Your Event Surveys</title>
  <link rel="stylesheet" href="/css/main.css">
  <style>
    .survey-history-table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 1rem;
    }
    .survey-history-table th,
    .survey-history-table td {
      padding: 0.6rem 0.8rem;
      border-bottom: 1px solid #ddd;
      text-align: left;
    }
    .survey-history-table th {
      background-color: var(--er-charcoal);
      color: var(--er-cream);
    }
    .status-pill {
      display: inline-block;
      padding: 0.2rem 0.7rem;
      border-radius: 999px;
      font-size: 0.8rem;
      font-weight: 600;
    }
    .status-completed {
      background: #d1fae5;
      color: #065f46;
    }
    .status-incomplete {
      background: #fee2e2;
      color: #991b1b;
    }
    .btn-small {
      padding: 0.3rem 0.75rem;
      border-radius: 999px;
      font-size: 0.85rem;
    }
  </style>
</head>
<body>

<%- include('../partials/_nav') %>
<%- include('../partials/_flash') %>

<div class="page-wrap">
  <div class="page">
    <h1>Your Event Surveys</h1>
    <p>View your past events and complete any missing surveys.</p>

    <% if (!surveyEvents || surveyEvents.length === 0) { %>
      <p>You do not have any attended events yet.</p>
    <% } else { %>

      <table class="survey-history-table">
        <thead>
          <tr>
            <th>Event</th>
            <th>Date &amp; Time</th>
            <th>Location</th>
            <th>Status</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% surveyEvents.forEach(ev => { %>
            <tr>
              <td><%= ev.eventname %></td>
              <td><%= ev.eventDateDisplay %></td>
              <td><%= ev.eventlocation || '' %></td>
              <td>
                <% if (ev.status === 'Completed') { %>
                  <span class="status-pill status-completed">Completed</span>
                <% } else { %>
                  <span class="status-pill status-incomplete">Incomplete</span>
                <% } %>
              </td>
              <td>
                <a
                  class="btn-primary btn-small"
                  href="/surveys/fill?eventname=<%= encodeURIComponent(ev.eventname) %>&eventdatetimestart=<%= encodeURIComponent(ev.eventDateParam) %>"
                >
                  <%= ev.status === 'Completed' ? 'Edit Survey' : 'Take Survey' %>
                </a>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>

    <% } %>
  </div>
</div>
  <%- include('../partials/_footer') %>
</body>
</html>
