<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <link rel="stylesheet" href="/css/main.css">
</head>
<body>

  <%- include('../partials/_nav') %>
  <%- include('../partials/_flash') %>

  <h1>My Donations</h1>

  <a href="/my-donations/new" class="btn">Make a Donation</a>

  <table>
    <thead>
      <tr>
        <th>Date</th>
        <th>Amount</th>
      </tr>
    </thead>

    <tbody>
      <% donations.forEach(d => { %>
        <tr>

          <td>
            <%= d.date
                ? d.date.toISOString().slice(0, 10)
                : "No Date"
            %>
          </td>

          <td>$<%= d.amount %></td>

        </tr>
      <% }) %>
    </tbody>
  </table>

</body>
</html>
