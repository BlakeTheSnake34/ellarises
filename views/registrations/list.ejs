<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <link rel="stylesheet" href="/css/main.css">
</head>
<body>

<!-- NAV + FLASH -->
<%- include('../partials/_nav') %>
<%- include('../partials/_flash') %>

<div class="page-wrap">
  <div class="page">

    <h1>Upcoming Events</h1>

    <% if (events.length === 0) { %>
      <p>No upcoming events are currently scheduled.</p>
    <% } else { %>

      <table class="er-table">
        <thead>
          <tr>
            <th>Event</th>
            <th>Start</th>
            <th>End</th>
            <th>Location</th>
            <th>Capacity</th>
            <th>Register</th>
          </tr>
        </thead>

        <tbody>
        <% events.forEach(ev => { %>
          <tr>
            <td><%= ev.eventname %></td>
            <td><%= new Date(ev.eventdatetimestart).toLocaleString() %></td>
            <td>
              <% if (ev.eventdatetimeend) { %>
                <%= new Date(ev.eventdatetimeend).toLocaleString() %>
              <% } else { %>
                N/A
              <% } %>
            </td>

            <td><%= ev.eventlocation || 'TBD' %></td>
            <td><%= ev.eventcapacity || 'â€”' %></td>

            <td>
              <form 
                method="POST" 
                action="/registrations/<%= ev.eventname %>/<%= ev.eventdatetimestart.toISOString() %>"
              >
                <button class="btn-primary">Register</button>
              </form>
            </td>
          </tr>
        <% }) %>
        </tbody>
      </table>

    <% } %>

  </div>
</div>

</body>
</html>
