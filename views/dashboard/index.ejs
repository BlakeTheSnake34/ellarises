<!DOCTYPE html>
<html>
<head>
  <title>Dashboard</title>
  <link rel="stylesheet" href="/css/main.css">

  <style>

    /* The outer wrapper gives clean spacing & centers */
    .dashboard-wrapper {
      padding: 24px;   /* ~1 inch padding */
      display: flex;
      justify-content: center;
    }

    /* Inner wrapper controls the scale */
    .dashboard-scale {
      transform: scale(0.90);   /* shrink to 90% */
      transform-origin: top center;
      width: 100%;
    }

    /* Ensure Tableau gets full space before scaling */
    .tableauPlaceholder {
      width: 100%;
      height: 100vh;   /* full height so nothing gets cut */
    }

  </style>
</head>

<body>

  <%- include('../partials/_nav') %>
  <%- include('../partials/_flash') %>

  <h1>Dashboard</h1>

  <!-- Outer centering + padding -->
  <div class="dashboard-wrapper">

    <!-- Inner scaling wrapper -->
    <div class="dashboard-scale">

      <!-- Tableau embed (unchanged) -->
      <div class='tableauPlaceholder' id='viz1764801900541' style='position: relative'>
        <noscript>
          <a href='#'>
            <img alt='Dashboard Image'
              src='https://public.tableau.com/static/images/In/IntexDashboard-Group6/Dashboard1/1_rss.png'
              style='border: none' />
          </a>
        </noscript>

        <object class='tableauViz' style='display:none;'>
          <param name='host_url' value='https%3A%2F%2Fpublic.tableau.com%2F' />
          <param name='embed_code_version' value='3' />
          <param name='site_root' value='' />
          <param name='name' value='IntexDashboard-Group6/Dashboard1' />
          <param name='tabs' value='yes' />
          <param name='toolbar' value='yes' />
          <param name='static_image'
            value='https://public.tableau.com/static/images/In/IntexDashboard-Group6/Dashboard1/1.png' />
          <param name='animate_transition' value='yes' />
          <param name='display_static_image' value='yes' />
          <param name='display_spinner' value='yes' />
          <param name='display_overlay' value='yes' />
          <param name='display_count' value='yes' />
          <param name='language' value='en-US' />
        </object>
      </div>

      <script type='text/javascript'>
        var divElement = document.getElementById('viz1764801900541');
        var vizElement = divElement.getElementsByTagName('object')[0];

        /* Keep your existing adaptive logic */
        if (divElement.offsetWidth > 800) {
          vizElement.style.minWidth = '1500px';
          vizElement.style.maxWidth = '100%';
          vizElement.style.minHeight = '1150px';
          vizElement.style.maxHeight = (divElement.offsetWidth * 0.75) + 'px';
        } else if (divElement.offsetWidth > 500) {
          vizElement.style.minWidth = '1500px';
          vizElement.style.maxWidth = '100%';
          vizElement.style.minHeight = '1150px';
          vizElement.style.maxHeight = (divElement.offsetWidth * 0.75) + 'px';
        } else {
          vizElement.style.width = '100%';
          vizElement.style.minHeight = '2250px';
          vizElement.style.maxHeight = (divElement.offsetWidth * 1.77) + 'px';
        }

        var scriptElement = document.createElement('script');
        scriptElement.src = 'https://public.tableau.com/javascripts/api/viz_v1.js';
        vizElement.parentNode.insertBefore(scriptElement, vizElement);
      </script>

    </div> <!-- end scaling -->
  </div> <!-- end wrapper -->

</body>
</html>
