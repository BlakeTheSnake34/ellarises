<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <title><%= title %></title>
  <link rel="stylesheet" href="/css/main.css?v=7">

  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=DM+Serif+Display&family=Montserrat:wght@300;400;500;600;700&display=swap" rel="stylesheet">
</head>
<body>
  <%- include('../partials/_nav') %>
  <%- include('../partials/_flash') %>

  <div class="page-wrap">
    <div class="page">
      <h1>
        Milestones for
        <span><%= participant.first_name %> <%= participant.last_name %></span>
      </h1>

      <p style="margin-top: 0; color:#555a55;">
        Email:
        <strong><%= participant.email %></strong>
      </p>

      <p style="margin-top: 0.35rem;">
        <a href="/milestones" class="link-back">&larr; Back to milestone summary</a>
      </p>

      <p style="margin-top: 1rem;">
        <a href="/participants/<%= participant.id %>/milestones/new" class="btn-add">
          + Add milestone
        </a>
      </p>

      <div class="table-shell">
        <div class="table-shell-inner">
          <table class="data-table">
            <thead>
              <tr>
                <th>Milestone title</th>
                <th>Date</th>
                <th class="action-cell">Actions</th>
              </tr>
            </thead>
            <tbody>
              <% if (!milestones || milestones.length === 0) { %>
                <tr>
                  <td colspan="3">
                    No milestones recorded yet for this participant.
                  </td>
                </tr>
              <% } else { %>
                <% milestones.forEach(m => { %>
                  <tr>
                    <td><%= m.milestonetitle %></td>
                    <td>
                      <% if (m.milestonedate) { %>
                        <%= new Date(m.milestonedate).toLocaleDateString('en-US') %>
                      <% } else { %>
                        â€”
                      <% } %>
                    </td>
                    <td class="action-cell">
                      <a
                        href="/milestones/<%= m.id %>/edit"
                        class="btn-edit"
                      >
                        Edit
                      </a>

                      <form
                        action="/milestones/<%= m.id %>/delete"
                        method="POST"
                        class="inline-form"
                        onsubmit="return confirm('Delete this milestone?');"
                      >
                        <input
                          type="hidden"
                          name="_csrf"
                          value="<%= typeof csrfToken !== 'undefined' ? csrfToken : '' %>"
                        >
                        <input type="hidden" name="participant_id" value="<%= participant.id %>">
                        <button type="submit" class="btn-delete">
                          Delete
                        </button>
                      </form>
                    </td>
                  </tr>
                <% }) %>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>

      <p style="margin-top: 1.2rem;">
        <a href="/home" class="link-back">&larr; Back to home</a>
      </p>
    </div>
  </div>

  <%- include('../partials/_footer') %>
</body>
</html>





